<MACRO name="Solo Focus Selected Tracks" script="Tracktion.soloSelectedTracks();&#13;&#10;var tracks = Tracktion.getEditElements(&quot;track&quot;);&#13;&#10;var SelectedTracks = Tracktion.getSelectedEditElements(&quot;track&quot;);&#13;&#10;var unSoloedTracks = [];&#13;&#10;var solo = false;&#13;&#10;var hidden = false;&#13;&#10;&#13;&#10;  for (var i = 0; i &lt;= tracks.length; i++) {&#13;&#10;    hidden = true;&#13;&#10;    if (Tracktion.isSolo(tracks[i]) == false) {&#13;&#10;      unSoloedTracks.push(tracks[i]);&#13;&#10;    }&#13;&#10;    else {&#13;&#10;      tracks[i].setProperty(&quot;hidden&quot;, &quot;0&quot;);&#13;&#10;      solo = true;&#13;&#10;    }&#13;&#10;  }&#13;&#10;  if (solo == true) {&#13;&#10;    for (var j = 0; j &lt; tracks.length; ++j) {&#13;&#10;      unSoloedTracks[j].setProperty(&quot;hidden&quot;, &quot;1&quot;);&#13;&#10;    }&#13;&#10;  }&#13;&#10;&#13;&#10;if (hidden == true) {&#13;&#10;  var tracks = Tracktion.getEditElements('track');&#13;&#10;  var numTracks = tracks.length;&#13;&#10;&#13;&#10;  for (var i = 0; i &lt; numTracks; ++i)&#13;&#10;    tracks[i].setProperty('hidden', '0');&#13;&#10;}"/>
